#form-container
  .form-group
  = simple_form_for @sock do |f|
    .form-control-file
    = f.input :photo, as: :file, placeholder: 'Add photo'
    .form-control
    = f.input :description
    = f.input :material
    = f.input :kind, collection: Sock.kinds.keys
    = f.input :color, collection: Sock.colors.keys
    = f.input :size, input_html: { min: '14', max: '54', step: '1' }, placeholder: "Size", label: false
    = f.button :submit, class: "btn-primary"
    = f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary"

  = link_to 'Show all socks', socks_path
